---
interface Post {
  name: string;
  content: string;
  url: string;
  targets: string[];
}

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<div class="grid grid-cols-1 gap-4 overflow-x-hidden" data-posts-container>
  {
    posts.map((post) => (
      <div class="border border-white/10 p-4 rounded-lg hover:bg-white/5 transition cursor-pointer">
        <a
          href={post.url}
          target="_blank"
          class="text-lg font-semibold mb-2 hover:underline"
        >
          {post.name}
        </a>
        <p class="text-sm text-gray-300 my-3">{post.content}</p>
        <div class="flex flex-wrap gap-2">
          {post.targets.map((tag) => (
            <span class="text-xs text-white/50 border border-white/5 bg-white/5 px-2 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
      </div>
    ))
  }
</div>
